import java.io.IOException;
import java.nio.file.*;
import java.util.HashMap;
import java.util.Map;

public class FindFileWithContent {
    public static void main(String[] args) throws IOException {
        var filePath = "C:\\path\\to\\folder"; // Replace with your desired path
        var fileName = "query.gql";

        var path = Paths.get(filePath);
        var fileContentMap = new HashMap<String, String>();

        Files.walkFileTree(path, new SimpleFileVisitor<>() {
            @Override
            public FileVisitResult visitFile(Path file, BasicFileAttributes attrs) throws IOException {
                if (attrs.isRegularFile() && file.getFileName().toString().equals(fileName)) {
                    var folderName = file.getParent().getFileName().toString();
                    var fileContent = Files.readString(file);
                    fileContentMap.put(folderName, fileContent);
                }
                return FileVisitResult.CONTINUE;
            }
        });

        System.out.println("Folder Name\tFile Content");
        fileContentMap.forEach((folderName, fileContent) -> System.out.println(folderName + "\t" + fileContent));
    }
}
